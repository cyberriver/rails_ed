
<h2><%= t('.header')%></h2>

<table class="table">
  <% if current_user.test_passages.present?%>
  <thead>
    <tr>
      <th scope="col">Test Passage ID</th>
      <th scope="col">Test Name</th>
      <th scope="col">Started at</th>
      <th scope="col">% progress done</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
    <% current_user.test_passages.order(created_at: :desc).each do |tp| %>

    <tr>
      <td><%= tp.id %></td>
      <td><%= tp.test.title %></td>
      <td><%= tp.created_at %></td>
      <th>

        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated"
                 role="progressbar"
                 id = "progress-bar"
                 aria-valuenow="75"
                 aria-valuemin="0"
                 aria-valuemax="100"
                 style="width: <%  tp.current_progress%>%"
                 data-progress="<%= tp.current_progress %>">
                 <%= tp.current_progress.ceil %>

            </div>
          </div>


      </th>
      <td><%= link_to t('continue'), test_passage_path(tp), class: "btn btn-light" %></td>
    </tr>

    <% end %>

  <% else %>
    <p> <%= t('.not_started')%> </p>

  <% end %>
  </tbody>


</table>

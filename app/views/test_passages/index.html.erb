
<h2><%= t('.header')%></h2>

<table>
  <% if current_user.test_passages.present?%>
  <thead>
    <tr>
      <th>Test Passage ID</th>
      <th>Test Name</th>
      <th>Started at</th>
      <th>% progress done</th>
      <th>Action</th>

    </tr>
  </thead>
  <tbody>
    <% current_user.test_passages.order(created_at: :desc).each do |tp| %>

    <tr>
      <td><%= tp.id %></td>
      <td><%= tp.test.title %></td>
      <td><%= tp.created_at %></td>
      <th><%= tp.current_progress%></th>
      <td><li><%= link_to t('continue'), test_passage_path(tp)%></li></td>
    </tr>

    <% end %>

  <% else %>
    <p> <%= t('.not_started')%> </p>

  <% end %>
  </tbody>


</table>

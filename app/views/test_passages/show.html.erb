
<h1><%= t('.header', title: @test_passage.test.title) %> </h1>
<p>
  <h3><%= t('.question_header', current:@test_passage.current_question_position, total: @test_passage.test.questions.count )%> </h3>
</p>

<b>
  <%= @test_passage.current_question.body%>
</b>




<%= form_with url: test_passage_path(@test_passage), local:true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :title, include_hidden:
  false do |b| %>
  <p>
    <%= b.check_box id: "answer_ids_#{b.object.id}"%>
    <%= b.label%>
  </p>
  <% end%>
  <p>
    <%= form.submit 'Next' %>
  </p>
<% end %>

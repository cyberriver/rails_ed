
<h2><%= t('.header') %><%= link_to t('create'), new_admin_test_path, class: "btn btn-primary bi bi-bag-plus" %></h2>


<table class="table">
  <thead>
    <tr>
      <th scope="col"><%=t('.num')%></th>
      <th class = "sort-by-title pointer" scope="col">
        <%=t('.title')%>
        <i class="bi bi-arrow-bar-up " ></i>
        <i class="bi bi-arrow-bar-down hide" ></i>
      </th>
      <th scope="col"><%=t('.level')%></th>
      <th scope="col"><%=t('.category')%></th>
      <th scope="col"><%=t('.author')%></th>
      <th scope="col"><%=t('.questions_count')%></th>
      <th colspan="4" scope="col"><%= t('actions')%></th>
    </tr>
  </thead>

  <tbody>
    <% @test.each do |test|%>
    <tr>
      <td><%=test.id %> </td>
      <td><%=test.title %> </td>
      <td><%=level_title(test)%> </td>
      <td><%=test.category_id%> </td>
      <td><%=test.author_id %> </td>
      <td><%=test.questions.count %></td>

        <td>


          <%= link_to t('show'), admin_test_path(test.id),class: "btn btn-light bi bi-zoom-in" %></td>
        <td>


          <%= link_to t('edit'), edit_admin_test_path(test.id),class: "btn btn-info bi bi-brush" %></td>

      <td>
        <%= link_to t('delete'), admin_test_path(test.id),
                                   class: "btn btn-danger bi bi-eraser",
                                  data: { turbo_method: "delete", turbo_confirm: "Are you sure?"}
                                     %>

                                  </td>


    </tr>
    <% end %>
  </tbody>
</table>

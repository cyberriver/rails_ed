
<%= form_with model: [:admin,@question, @answer], data:{turbo:true} do |form| %>
  <%= render 'admin/shared/errors', resource: @answer %>

  <div class="card border-0 w-50 align-items-center"">
    <div class="card-body">

    <%= form.label :title%>
    <%= form.text_area :title, id: :answer_body,  rows:7, cols: 60%>

    <%= form.label :correct%>
    <%= form.check_box :correct, id: :answer_correct%>

    </div>
</div>

  <div>
    <%= form.submit t('submit'), class: "btn btn-primary"%>
  </div>
<% end %>

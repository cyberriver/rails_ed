<% if resource.present? && resource.errors.any? %>
<%= content_tag :div, class: 'resource-errors',
                      data: {resource_id: resource.id} do %>
<div class="error_msg" style="color: red">
  <h3> <%= t('.header', count: resource.errors.count) %></h3>
    <% set_err_flash(resource) %>
<% end %>
</div>

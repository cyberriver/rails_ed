
<div class="card border-0 w-50 align-items-center"">
  <div class="card-body">
    <%= render 'admin/shared/errors', resource: @badge %>
    <%= form_with model: [:admin, @badge], data:{turbo:true} do |f| %>
     <%= f.label :image%><br />
     <%= f.file_field :image%><br />
      <%= f.label :title%><br />
      <%= f.text_field :title %><br />
      <%= f.label :file_name %><br />
      <%= f.text_field :file_name %><br />
      <%= f.label :rule %><br />
      <%= f.text_field :rule %><br />
      <%= f.label :parameter %><br />
      <%= f.text_field :parameter %><br />

      <%= f.submit t('submit'), class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
